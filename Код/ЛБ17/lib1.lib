// input_output.h
#ifndef INPUT_OUTPUT_H
#define INPUT_OUTPUT_H

#include <iostream>
#include <iomanip>

void printArray(double arr[], int size) {
    for (int i = 0; i < size; i++) {
        std::cout << std::setw(5) << std::setprecision(2) << std::fixed << arr[i] << " ";
    }
    std::cout << std::endl;
}

#endif // INPUT_OUTPUT_H
